conda_env: conda.yaml

entry_points:
  generation:
    command: "python generation.py"
  analysis1:
    parameters:
      threshold: {type: float, default: 50.0}
    command: "python analysis1.py --threshold {threshold}"
  analysis2:
    parameters:
      threshold: {type: float, default: 50.0}
    command: "python analysis2.py --threshold {threshold}"
  evaluation1:
    parameters:
      threshold: {type: float, default: 50.0}
    command: "python evaluation1.py --threshold {threshold}"
  main:
    command: "python main.py"
    
