name: scopyon

conda_env: conda.yaml

entry_points:
  generation:
    parameters:
      num_samples: {type: int, default: 1}
      num_frames: {type: int, default: 5}
    command: "papermill ./generation.ipynb ./artifacts/generation.ipynb -p num_samples {num_samples} -p num_frames {num_frames}"
  analysis1:
    parameters:
      num_samples: {type: int, default: 1}
      num_frames: {type: int, default: 5}
    command: "papermill ./analysis1.ipynb ./artifacts/analysis1.ipynb -p num_samples {num_samples} -p num_frames {num_frames}"
  analysis2:
    parameters:
      num_samples: {type: int, default: 1}
      num_frames: {type: int, default: 5}
    command: "papermill ./analysis2.ipynb ./artifacts/analysis2.ipynb -p num_samples {num_samples} -p num_frames {num_frames}"
  evaluation1:
    parameters:
      num_samples: {type: int, default: 1}
      num_frames: {type: int, default: 5}
    command: "papermill ./evaluation1.ipynb ./artifacts/evaluation1.ipynb -p num_samples {num_samples} -p num_frames {num_frames}"
  main:
    parameters:
      num_samples: {type: int, default: 1}
      num_frames: {type: int, default: 5}
    command: "papermill ./main.ipynb ./artifacts/main.ipynb -p num_samples {num_samples} -p num_frames {num_frames}"
