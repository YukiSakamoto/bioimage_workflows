name: scopyon

conda_env: conda.yaml

entry_points:
  step1:
    parameters:
      seed: {type: int, default: 123}
    command: "python step1.py {seed}"

  step2:
    parameters:
      inputval1: {type: int, default: 24}
    command: "python step2.py {inputval1}"
  step3:
    parameters:
      step3inputval1: {type: int, default: 3}
    command: "python step3.py {step3inputval1}"
  #
  exec_step2_and_step3:
    parameters:
      inputval1: {type: int, default: 24}
    command: "python exec_step2_and_step3.py {inputval1}"
  
  #
  inspectrun:
    parameters:
      runid: {type: string, default: 123}
    command: "python inspectrun.py {runid}"
  #
  main:
    parameters:
      seed: {type: int, default: 123}
    command: "python allsteps.py {seed}"
    
